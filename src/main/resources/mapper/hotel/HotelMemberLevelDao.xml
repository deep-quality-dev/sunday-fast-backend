<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
	namespace="io.renren.modules.hotel.dao.HotelMemberLevelDao">

	<!-- 可根据自己的需求，是否要使用 -->
	<resultMap
		type="io.renren.modules.hotel.entity.HotelMemberLevelEntity"
		id="hotelMemberLevelMap">
		<result property="id" column="id" />
		<result property="sellerId" column="seller_id" />
		<result property="name" column="name" />
		<result property="payAmount" column="pay_amount" />
		<result property="icon" column="icon" />
		<result property="discount" column="discount" />
		<result property="orderby" column="orderby" />
		<result property="payFlag" column="pay_flag" />
		<result property="content" column="content" />
		<result property="bgImage" column="bg_image" />
	</resultMap>

	<select id="userCardList" resultMap="hotelMemberLevelMap">
		SELECT
		t1.*
		from
		t_hotel_member_level_detail t inner join t_hotel_member_level t1
		on
		t.level_id = t1.id where t.member_id = #{userId}
	</select>
</mapper>